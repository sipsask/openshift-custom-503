#!/bin/bash -e

source $OPENSHIFT_CARTRIDGE_SDK_BASH

mkdir -p maintenance_page/run
mkdir -p maintenance_page/logs

client_result "Maintenance Page plugin was added successfuly to your application."
client_result "If you want to customize the default page type this:"
client_result ""
client_result "   app env set MAINTENANCE_URL=http://yourpage.com/maintenance.html"
client_result ""
